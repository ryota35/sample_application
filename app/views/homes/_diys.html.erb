<h1>みんなのDIY</h1>
<div class="diy-list">
  <% diys.each do |n| %>
    <div class="diy-content">
      <p>
        <%= link_to home_path(n.id), local: true do %>
          <%= attachment_image_tag n, :image, format: 'jpeg', class: 'diy-image' %>
        <% end %>
      </p>
      <div class="diy-info">
        <p><%= n.user.name %></p>
        <p>タイトル:<%= n.title %></p>
        <p><%= n.body %></p>
        <p>予算:<%= n.price %>円</p>
        <p><%= n.created_at.strftime("%Y-%m-%d") %></p>
      </div>
    </div>
  <% end %>
</div>