<div class="edit-wrapper">
  <%= form_with model:@diy, local: true do |f| %>
    <%= f.label :image %>
    <%= f.attachment_field :image %><br>

    <%= f.label :title %>
    <%= f.text_field :title %><br>

    <%= f.label :body %>
    <%= f.text_area :body %><br>

    <%= f.label :material %>
    <%= f.text_area :material %><br>

    <%= f.label :price %>
    <%= f.number_field :price %><br>

    <%= f.submit "送信" %>
  <% end %>
</div>